<main id="posts-home">


	<div class="basic">
		
			<% if user_signed_in? %>
			<div id="text">
			<%= form_for @post, remote: true do |f| %>
				<%= f.label :content %>
				<%= f.text_area :content %>

				<%= f.submit %>
			<% end %>
			<% end %>
		</div>

		<div id="box" >
<ol id="list" >
				<% @posts.reverse.each do |p| %>
				<!--  -->
					<%= render 'post', post: p %>
				<% end %>
			</ol>


		</div>
		

	</div>


</main>

